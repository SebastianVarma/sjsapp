<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingBottom="8dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawer_greeting"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        android:paddingTop="64dp"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:paddingBottom="4dp"
        android:id="@+id/drawer_header_greeting"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        android:paddingTop="64dp"
        android:paddingBottom="4dp"
        android:id="@+id/drawer_header_name"
        android:layout_toEndOf="@+id/drawer_header_greeting"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/drawer_name"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        android:paddingTop="0dp"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@id/drawer_header_name"
        android:id="@+id/drawer_header_email"/>

</RelativeLayout>